<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorForeground">#000000</item>
        <item name="android:textColorPrimary">@color/textGrey</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:elevation">0dp</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#90cfcfcf</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="TextTitle">
        <item name="android:textColor">@color/textGrey</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">fill_vertical</item>
    </style>
    <style name="TextNormal">
        <item name="android:textColor">@color/textGrey</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">13dp</item>
        <item name="android:gravity">fill_vertical</item>
    </style>
    <style name="TextSub">
        <item name="android:textColor">@color/textGrey</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">12dp</item>
        <item name="android:gravity">fill_vertical</item>
    </style>

    <style name="AroThemeDark" parent="Theme.AppCompat.DayNight.DarkActionBar" >
        <item name="colorPrimary">@color/green_aro</item>
        <item name="colorAccent">@color/green_aro_dark</item>
        <item name="colorPrimaryDark">@color/green_aro_dark</item>
        <item name="android:textColorPrimary">@color/textGrey</item>
    </style>
</resources>
